<div class="comment mb-3">
  <div class="card">
    <div class="card-body">
      <% if comment.anonymous? %>
        <h5 class="card-title">Anonymous - <%= comment.anonymous_name %></h5>
      <% else %>
        <h5 class="card-title"><%= comment.user.name %></h5>
      <% end %>
      <p class="card-text"><%= comment.content %></p>
      <small class="text-muted">Posted on <%= comment.created_at.strftime("%b %d, %Y") %></small>
    </div>
  </div>
</div>
