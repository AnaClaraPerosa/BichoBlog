<div class="container mt-4">
  <div class="card mx-auto" style="max-width: 800px;">
    <div class="card-body">
      <h1 class="text-center">Editar Post</h1>
      <%= form_with model: @post, local: true do |form| %>
        <% if @post.errors.any? %>
          <div class="alert alert-danger">
            <h4><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h4>
            <ul>
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :title, class: "form-label" %>
          <%= form.text_field :title, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :content, class: "form-label" %>
          <%= form.text_area :content, class: "form-control", rows: 6 %>
        </div>

        <div class="d-flex justify-content-end">
          <%= form.submit "Alterar post", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
