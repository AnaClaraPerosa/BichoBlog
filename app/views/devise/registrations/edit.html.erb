<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="card shadow-sm w-100" style="max-width: 500px; padding: 20px; border-radius: 10px;">
    <div class="card-body">
      <h2 class="text-center mb-4">Edite seu perfil</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3">
          <%= f.label :name, "Nome completo", class: "form-label" %>
          <%= f.text_field :name, class: "form-control", placeholder: "Your full name" %>
        </div>

        <div class="mb-3">
          <%= f.label :email, "Email", class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Your email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="alert alert-warning">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="mb-3">
          <%= f.label :password, "Nova senha", class: "form-label" %>
          <small class="form-text text-muted">(deixe em branco caso não queira alterar)</small>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Digitar nova senha" %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted">mínimo <%= @minimum_password_length %> caracteres</small>
          <% end %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, "Confirmar nova senha", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirmar nova senha" %>
        </div>

        <div class="mb-3">
          <%= f.label :current_password, "Senha atual", class: "form-label" %>
          <small class="form-text text-muted">(nós precisamos de sua senha atual para confirmar as mudanças)</small>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: "Digite sua senha atual" %>
        </div>

        <div class="d-grid gap-2">
          <%= f.submit "Alterar dados", class: "btn btn-success" %>
        </div>
      <% end %>

      <hr class="my-4">

      <h3 class="text-center text-danger">Excluir minha conta</h3>
      <div class="text-center">
        <%= button_to "Excluir minha conta", registration_path(resource_name), method: :delete, class: "btn btn-outline-danger" %>
      </div>

      <div class="mt-3 text-center">
        <%= link_to "Voltar", :back, class: "btn btn-link" %>
      </div>
    </div>
  </div>
</div>
